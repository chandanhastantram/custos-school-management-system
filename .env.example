# CUSTOS Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=CUSTOS
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://custos:custos_password@localhost:5432/custos_db

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_HASH_ROUNDS=12

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# AI Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
AI_COST_PER_1K_TOKENS=0.01

# SaaS Configuration
TRIAL_DAYS=14

# Email (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@custos.app

# Storage (for file uploads)
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
